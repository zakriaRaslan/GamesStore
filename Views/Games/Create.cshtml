@model AddGameFormViewModel

@{
    ViewBag.Title = "Add Game";
}

<h1>Add Game Form</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Games" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Game Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
                data-placeholder="Select a category" data-minimum-results-for-search="Infinity">
                    <option value=""></option>              
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                data-placeholder="Select Devices">
                    <option value=""></option>
                </select>
                <span class="text-danger" asp-validation-for="SelectedDevices"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" rows="5" asp-for="Description" placeholder="Input Your Game Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover"
                data-rule-extension="@FileSettings.AllowedImgExtensions.Replace(".",string.Empty)"
                data-msg-extension="This Extension Is Not Allowed"
                data-rule-filesize="@FileSettings.MaxImgSizeInByte"
                data-msg-filesize="Maximum Size For Image Is @FileSettings.MaxImgSizeInMB MB"
                >
                <small id="emailHelp" class="form-text text-muted">Only Support @FileSettings.AllowedImgExtensions And Max Size(@FileSettings.MaxImgSizeInMB)MB </small>
                <span class="text-danger d-block" asp-validation-for="Cover"></span>
            </div>
            <button class="btn btn-light btn-lg text-dark mt-4">Submit</button>
        </form>
    </div>
    <div class="col-md-6 d-flex justify-content-center overflow-hidden">
        <img class="cover-preview d-none pt-5" alt="Cover" />
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/imagepreview.js" asp-append-version="true"></script>
}

